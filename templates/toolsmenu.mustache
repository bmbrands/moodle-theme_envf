{{!
    @template theme_envf/toolsmenu

    This template renders the header.

    Example context (json):
    {
        "hasitems": true,
        "menuitems": [
            {
                "id": "1",
                "name": "Dashboard",
                "url": "http://localhost/moodle/my/",
                "icon": "fa-tachometer",
                "color": "brand",
                "newwindow": false,
                "jsparams": [
                    {
                        "type": "data-foo",
                        "value": "bar"
                    }
                ]
            },
            {
                "id": "2",
                "name": "Calendar",
                "url": "http://localhost/moodle/calendar/view.php?view=month",
                "imageurl": "http://localhost/moodle/theme/image.php/boost/core/1602669992/i/calendar",
                "newwindow": false,
                "jsparams": [
                    {
                        "type": "data-foo",
                        "value": "bar"
                    }
                ]
            }
        ]
    }
}}

<ul class="nav navbar-nav flex-nowrap">
    <li class="dropdown nav-item icon-size-4">
        <a
            class="nav-link dropdown-toggle icon-no-margin tools-menu-link"
            href="#"
            id="tools-menulink"
            data-toggle="dropdown"
            aria-haspopup="true"
            aria-expanded="false"
            aria-controls="tools-menu-{{uniqid}}"
        >
            {{#pix}} i/menubars, core, {{#str}} menu_tooltip, theme_envf {{/str}} {{/pix}}
        </a>
        <div id="tools-menu-{{uniqid}}" data-region="tools-menu-content" class="tools-menu p-0 dropdown-menu dropdown-menu-left" aria-labelledby="tools-menulink">
            {{#hasitems}}
                <div class="tools-menu-grid p-2">
                    {{#menuitems}}
                        <a id="tools-item-{{id}}" href="{{url}}" {{#newwindow}}target="_blank"{{/newwindow}} class="tools-menu-item py-2 px-2 d-flex flex-column text-center align-items-center justify-content-start" {{#jsparams}} {{type}}={{value}} {{/jsparams}}>
                            {{#icon}}
                                <div class="w-100 d-flex align-items-center justify-content-center mb-1">
                                    <div class="iconcontainer {{#color}}bg-{{color}}{{/color}}{{^color}}bg-brand{{/color}} text-white activityiconcontainer rounded-circle">
                                        {{{icon}}}
                                    </div>
                                </div>
                            {{/icon}}
                            {{#imageurl}}
                                <div class="w-100 flex-fill d-flex align-items-center">
                                    <img src="{{imageurl}}" alt="icon" aria-hidden="true" class="mb-2 px-3 w-100" />
                                </div>
                            {{/imageurl}}
                            <span class="small w-100">{{{text}}}</span>
                        </a>
                    {{/menuitems}}
                </div>
            {{/hasitems}}
        </div>
    </li>
</ul>
