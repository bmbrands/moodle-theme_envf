{{!
    Page footer.
}}
<div id="goto-top-link">
    {{! go to top is sticky to footer so needs to be sibling }}
    <a class="btn btn-dark" role="button" href="#">
        {{#pix}} i/up, core, {{#str}} totop, theme_boost {{/str}}{{/pix}}
    </a>
</div>
<footer id="page-footer" class="py-3 text-dark bg-white">
    <div class="container">
        <div class="container-fluid infos-footer">
            <div class="row-fluid justify-content-center">
                <div class="col-12 col-md">
                    <img class="ma-logo d-none d-sm-inline-block" src="{{{ config.wwwroot }}}/theme/envf/pix/ministere-agriculture-alimentation.png" role="presentation"
                         alt="{{#str}}ministereagriculture, theme_envf{{/str}}">
                </div>
                <div class="col-12 col-md-auto">
                    <div class="container">
                        <div class="row">
                            <div clas="col">
                                <img class="envf-logo" src="{{ output.get_compact_logo_url }}" alt="{{ sitename }}">
                            </div>
                            <div class="col">
                                <div class="d-flex flex-column">
                                    <div class="font-weight-bold">{{#str}} envf, theme_envf {{/str}}</div>
                                    <ul  class="list-unstyled pt-3 d-none d-md-block addresses">
                                        {{# additionalinfo.orglist }}
                                            <li>
                                                <a href="{{link}}">{{ address }} </a>
                                            </li>
                                        {{/ additionalinfo.orglist }}
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            <div class="col-12 col-md">
                <nav class="nav navbar-nav" aria-label="{{#str}}custommenu, admin{{/str}}">
                    {{# output.custom_menu_flat }}
                        <ul class="list-unstyled pt-3">
                            {{> theme_boost/custom_menu_footer }}
                        </ul>
                    {{/ output.custom_menu_flat }}
                </nav>
            </div>
        </div>
        </div>
        <div class="container-fluid legal-footer">
            <div class="row-fluid justify-content-center">
                {{# additionalinfo.legallinks }}
                    <div class="col col-12 col-md">
                        <a href="{{link}}">{{label}}</a>
                    </div>
                {{/ additionalinfo.legallinks }}
            </div>
        </div>
        <div class="container-fluid">
            <div class="d-flex justify-content-center">
                {{{ output.standard_footer_html }}}
            </div>
        </div>
        {{{ output.standard_end_of_body_html }}}
    </div>
</footer>
