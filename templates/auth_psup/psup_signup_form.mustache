{{!
    @template core/signup_form_layout

    Example context (json):
    {
        "logourl": "https://moodle.org/logo/moodle-logo.svg",
        "sitename": "Site name",
        "formhtml": "<p>(Form html would go here)</p>"
    }
}}
<div class="container-fluid mt-1 mt-md-5">
    <div class="row justify-content-md-center">
        <div class="col-md-8 col-xl-6">
            <div class="card">
                <div class="card-body">
                    <div class="card-title text-xs-center">
                        <div class="mcms-square square-top-left square-single-violet"></div>
                        <div class="mcms-square square-top-right square-dual-red"></div>
                        <h3 class="signup-header text-center pb-5">{{#str}}signuptitle, theme_envf{{/str}}<br>{{sitename}}</h3>
                    </div>
                    <div class="card-title">
                        <div class="p-5" >{{#str}}signupdesc, theme_envf{{/str}}</div>
                        {{{formhtml}}}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>