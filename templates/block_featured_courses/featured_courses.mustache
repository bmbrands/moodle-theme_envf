{{!
    @template block_thumblinks_action/thumblinks_actions

    This template renders the main content area for the mcms block.

    Example context (json):
    {}
}}

<div id="block-featured-courses-{{uniqid}}" class="block-featured-courses block-cards">
    <div class="container">
        <div class="row">
            {{#courses}}
                <div class="thumbnail col mx-2 my-1">
                    <a href="{{viewurl}}">
                        <div class="course-image d-flex flex-column justify-content-center p-0 m-0 h-100"
                             style='background-image: url("{{{ courseimage}}}");'>
                            <p class="w-100 bg-white text-dark bold p-2" style="opacity:85%;">
                                {{ fullname }}
                            </p>
                        </div>
                    </a>
                </div>
            {{/courses}}
        </div>
    </div>
</div>